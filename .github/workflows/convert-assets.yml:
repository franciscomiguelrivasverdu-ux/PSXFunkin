name: Convert Assets to PSX Format

on:
  push:
    branches: [ master ]
    paths:
      - 'iso/**/*.wav'  # SOLO WAV en /iso/
  workflow_dispatch:

jobs:
  convert:
    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v4
    
    - name: Install audio tools
      run: |
        sudo apt-get update
        sudo apt-get install -y ffmpeg
        
    - name: Convert WAV to XA
      run: |
        echo "üéµ CONVIRTIENDO WAV ‚Üí XA..."
        find ./iso -name "*.wav" | while read wav_file; do
          xa_file="${wav_file%.wav}.xa"
          echo "Convertiendo: $wav_file -> $xa_file"
          ffmpeg -i "$wav_file" -f wav -acodec adpcm_ima_wav "$xa_file" -y
          echo "‚úÖ CONVERSI√ìN EXITOSA: $xa_file"
        done
        
    - name: List converted files
      run: |
        echo "üìÅ ARCHIVOS XA GENERADOS:"
        find ./iso -name "*.xa"
        
    - name: Upload XA files
      uses: actions/upload-artifact@v4
      with:
        name: wav-to-xa-conversion
        path: ./iso/**/*.xa
